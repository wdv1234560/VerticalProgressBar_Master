<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jiac.progressbar.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义垂直进度条"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.jiac.progressbar.VerticalProgressBar
            android:id="@+id/vpb1"
            android:layout_width="40dp"
            android:layout_height="350dp"
            app:vp_finished_color="#2aa33a"
            />

        <com.jiac.progressbar.VerticalProgressBar
            android:id="@+id/vpb2"
            android:layout_width="40dp"
            app:vp_hasline="true"
            android:layout_height="350dp"
            app:vp_hasText="true"
            android:layout_marginLeft="20dp"
            app:vp_finished_color="#e92e11"/>

        <com.jiac.progressbar.VerticalProgressBar
            android:id="@+id/vpb3"
            android:layout_width="40dp"
            android:layout_height="350dp"
            app:vp_progress="70"
            android:layout_marginLeft="20dp"
            app:vp_finished_color="#fc980c"
            app:vp_unfinished_color="#01bc36"
            />
    </LinearLayout>

</LinearLayout>
